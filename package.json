{
  "name": "audiovr-web",
  "version": "1.0.0",
  "description": "Voice-driven detective mystery platform with accessibility-first design",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "preview": "next start",
    "vercel:deploy": "vercel --prod",
    "vercel:preview": "vercel",
    "vercel:env": "vercel env pull .env.local",
    "vercel:logs": "vercel logs",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:reset": "supabase db reset",
    "supabase:migrate": "supabase db push",
    "supabase:migrate:new": "supabase migration new",
    "supabase:migrate:up": "supabase migration up",
    "supabase:generate-types": "supabase gen types typescript --local > src/types/supabase.ts",
    "supabase:seed": "supabase db seed",
    "supabase:status": "supabase status",
    "supabase:link": "supabase link",
    "supabase:functions:deploy": "supabase functions deploy",
    "supabase:functions:serve": "supabase functions serve",
    "db:setup": "npm run supabase:start && npm run supabase:migrate && npm run supabase:seed && npm run supabase:generate-types",
    "db:fresh": "npm run supabase:reset && npm run supabase:generate-types",
    "db:types": "npm run supabase:generate-types",
    "deploy": "npm run build && npm run vercel:deploy",
    "deploy:preview": "npm run build && npm run vercel:preview",
    "deploy:full": "npm run supabase:migrate && npm run build && npm run vercel:deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist .vercel",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "setup:env": "./scripts/setup-environment.sh",
    "setup:full": "./scripts/setup-environment.sh && ./scripts/deploy-full.sh",
    "verify": "./scripts/verify-deployment.sh",
    "postinstall": "npm run supabase:generate-types || true"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hono/node-server": "^1.8.0",
    "@hookform/resolvers": "^3.3.2",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/auth-helpers-react": "^0.4.2",
    "@supabase/supabase-js": "^2.38.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "hono": "^4.0.0",
    "jose": "^5.1.3",
    "next": "^14.0.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.0",
    "use-sound": "^4.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.7",
    "supabase": "^1.226.4",
    "typescript": "^5.0.0",
    "vercel": "^32.7.2"
  },
  "keywords": [
    "accessibility",
    "voice-control",
    "detective-mystery",
    "audio-games",
    "spatial-audio",
    "nextjs",
    "supabase",
    "vercel"
  ],
  "author": "AudioVR Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/audiovr-web"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
