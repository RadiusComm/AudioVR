{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=audiovr-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy dist --project-name audiovr",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply audiovr-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply audiovr-db",
    "db:seed": "wrangler d1 execute audiovr-db --local --file=./seed.sql"
  },
  "dependencies": {
    "hono": "^4.9.7",
    "@supabase/supabase-js": "^2.39.2"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@cloudflare/workers-types": "^4.20250705.0",
    "@types/node": "^20.10.5",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0",
    "typescript": "^5.3.3"
  }
}